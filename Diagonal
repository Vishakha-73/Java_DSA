package recursion;

public class diagonal {
	public static void diag()
    {
  	  System.out.print("*");
  	  System.out.println();
  	  
    }
    
    public static void space(int x,int i)
    {
  	  if(i==x)
  		  return;
  	  
  	  for(int j=0;j<i;j++) {
      	  System.out.print("  ");
      	  }
  	  diag();
  	  space(x,i+1);
    }
    public static void main(String[] args)
	{
	   space(7,0);
	}
}
